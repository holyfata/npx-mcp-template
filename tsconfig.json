{
	"compilerOptions": {
		"target": "ES2024",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2024"],
		"moduleResolution": "bundler",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": ["src"]
}
