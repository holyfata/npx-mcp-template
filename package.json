{
	"name": "@betterhyq/npx-mcp-template",
	"version": "0.0.1-alpha.3",
	"type": "module",
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"bin": {
		"npx-mcp-template": "./dist/index.mjs"
	},
	"scripts": {
		"build": "tsc && unbuild",
		"start": "node ./dist/index.mjs",
		"start:http": "node ./dist/index.mjs --http --port=4000",
		"check": "biome check --write --unsafe"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.24.3",
		"commander": "14.0.2",
		"fastmcp": "3.25.3",
		"zod": "4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/node": "24.10.2",
		"globals": "16.5.0",
		"typescript": "5.9.3",
		"unbuild": "3.6.1",
		"vitest": "4.0.15"
	},
	"packageManager": "pnpm@10.13.1"
}
