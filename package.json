{
	"name": "@jd/bdsh-mcp-template",
	"version": "1.0.0",
	"description": "这是本地生活MCP模版项目，用于快速搭建本地生活MCP服务",
	"keywords": [
		"AI",
		"Agent",
		"MCP",
		"BDSH",
		"FE"
	],
	"homepage": "http://xingyun.jd.com/codingRoot/BDSH_BEST_AI/bdshMCPTemplate/",
	"bugs": {
		"url": "http://xingyun.jd.com/codingRoot/BDSH_BEST_AI/bdshMCPTemplate/issues/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://coding.jd.com/BDSH_BEST_AI/bdshMCPTemplate.git"
	},
	"license": "MIT",
	"author": "BDSH_BEST_AI",
	"type": "module",
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"bin": {
		"packageCommand": "./dist/index.mjs"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"ai:build": "uv run pyinstaller -F --collect-data oxygent src_agent/main.py",
		"ai:check": "pnpm run ai:check:import && pnpm run ai:check:format && pnpm run ai:check:lint && pnpm run ai:check:type",
		"ai:check:format": "uv run black src_agent",
		"ai:check:import": "uv run isort src_agent",
		"ai:check:lint": "uv run flake8 src_agent",
		"ai:check:type": "uv run mypy --disable-error-code import-untyped src_agent",
		"ai:dev": "DEFAULT_LLM_API_KEY=\"EMPTY\" DEFAULT_LLM_BASE_URL=\"http://llm-32b.jd.com/v1/chat/completions\" DEFAULT_LLM_MODEL_NAME=\"qwen25-32b-native\" uv run src_agent/main.py",
		"preai:start": "uv pip install dist/npx_mcp_agent-0.1.0-py3-none-any.whl",
		"ai:start": "DEFAULT_LLM_API_KEY=\"EMPTY\" DEFAULT_LLM_BASE_URL=\"http://llm-32b.jd.com/v1/chat/completions\" DEFAULT_LLM_MODEL_NAME=\"qwen25-32b-native\" uv run start-agent",
		"ai:test": "uv run pytest src_agent",
		"build": "pnpm run st:build && pnpm run ai:build",
		"check": "pnpm run st:check && pnpm run ai:check",
		"commit": "cz",
		"dev": "pnpm run st:dev && pnpm run ai:dev",
		"prepare": "husky",
		"prepublishOnly": "pnpm run build",
		"push": "git push origin master",
		"release": "changelogen --clean --release --push",
		"sort": "sort-package-json",
		"st:build": "unbuild",
		"st:check": "pnpm run st:check:format && pnpm run st:check:type",
		"st:check:format": "biome check --write --unsafe",
		"st:check:type": "tsc --noEmit",
		"st:dev": "bun run src/index.ts --http --port=8000",
		"st:start": "node ./dist/index.mjs --http --port=4000",
		"st:test": "vitest run",
		"test": "pnpm run st:test && pnpm run ai:test"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.25.1",
		"bun": "1.3.5",
		"commander": "14.0.2",
		"fastmcp": "3.25.4",
		"zod": "4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/node": "24.10.2",
		"@vitest/coverage-v8": "4.0.15",
		"automd": "0.4.2",
		"changelogen": "0.6.2",
		"commitizen": "4.3.1",
		"cz-conventional-changelog": "3.3.0",
		"globals": "16.5.0",
		"husky": "9.1.7",
		"sort-package-json": "3.6.0",
		"typescript": "5.9.3",
		"unbuild": "3.6.1",
		"vite": "7.3.0",
		"vitest": "4.0.15"
	},
	"packageManager": "pnpm@10.13.1",
	"engines": {
		"node": ">=24.0.2",
		"pnpm": ">=10.13.1"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"mcpName": "本地生活MCP模版项目"
}
